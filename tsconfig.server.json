{
  "compilerOptions": {
    "target": "es2018",
    "module": "CommonJS",
    "outDir": "dist",
    "sourceMap": true,
    "allowJs": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "strict": true, 
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "server/*"
      ]
    },
  },
  "include": [
    "./server/*",
  ],
  "exclude": ["node_modules", ""]
}